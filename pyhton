import turtle

def draw_branch(branch_length, t):
    if branch_length > 5:
        # Draw the branch
        t.forward(branch_length)
        t.right(20)
        draw_branch(branch_length - 15, t)
        
        t.left(40)
        draw_branch(branch_length - 15, t)
        
        t.right(20)
        t.backward(branch_length)

# Setup the screen
screen = turtle.Screen()
screen.bgcolor("black")

# Setup the turtle
t = turtle.Turtle()
t.color("lime")
t.speed("fastest")
t.left(90)  # Start pointing upwards
t.up()
t.backward(100)
t.down()

# Draw the fractal tree
draw_branch(100, t)

screen.mainloop()
print("Hello World")
print("Hello Everyone")